{{>layouts/header}}
<style>
    .center-text {
        text-align: center;
        color: black;
        font-weight: bold;
    }

    /* 링크 스타일 설정 */
    a {
        text-decoration: none; /* 밑줄 제거 */
        color: black;
    }

    /* 링크를 클릭했을 때의 스타일 */
    a:hover {
        color: green; /* 클릭하면 초록색으로 변경합니다. */
    }

    .table {
        width: 60%; /* 테이블 폭 */
        border-collapse: collapse;
        margin-top: 20px;
        margin-left: auto; /* 가운데 정렬을 위해 왼쪽 여백을 auto로 설정 */
        margin-right: auto; /* 가운데 정렬을 위해 오른쪽 여백을 auto로 설정 */
    }

    .table th, .table td {
        padding: 8px;
        border: 1px solid #ddd;
        text-align: center; /* 중앙 정렬 추가 */
    }

    .table th {
        background-color: #f2f2f2; /* 테이블 헤더 배경색 */
        color: #333; /* 테이블 헤더 글자색 */
    }

    .table tbody tr:hover {
        background-color: #f5f5f5; /* 호버 상태 배경색 */
    }
    
    /* 썸네일 이미지 스타일 */
    .thumbnail {
        max-width: 50px; /* 썸네일 이미지의 최대 너비 지정 */
        max-height: 50px; /* 썸네일 이미지의 최대 높이 지정 */
        margin: 0 auto; /* 가운데 정렬 추가 */
        display: block; /* 블록 요소로 설정하여 중앙 정렬이 적용되도록 합니다. */
    }

    /* webtoonTitle 스타일 */
    .webtoon-title {
        font-weight: bold; /* 볼드체 */
        font-size: 18px; /* 글자 크기 조절 */
    }

    /* 삭제 버튼 스타일 */
    .delete-button {
        background-color: #FF5733; /* 삭제 버튼 배경색 설정 */
        color: white; /* 텍스트 색상 설정 */
        border: none; /* 테두리 제거 */
        padding: 5px 10px; /* 내부 여백 설정 */
        border-radius: 5px; /* 버튼 모서리 둥글게 만들기 */
        cursor: pointer; /* 커서 모양 변경 */
    }

    .delete-button:hover {
        background-color: #D32F2F; /* 마우스 호버시 배경색 변경 */
    }
</style>

<table class="table">
    <thead>
        <tr>
            <th scope="col">WEBTOON</th>
            <th scope="col">REVIEW</th>
        </tr>
    </thead>
    <tbody>
        {{#reviewList}}
        <tr>
            <td>
                <a href="/webtoons/{{webtoonId}}">
                    <img class="thumbnail" src="{{thumbnailUrl}}" alt="{{webtoonTitle}} Thumbnail">
                </a>
            </td>
            <td>
                <a href="/webtoons/reviews/show/{{id}}">
                    <span class="webtoon-title">{{webtoonTitle}}</span>
                </a>
                <br>
                {{title}}
            </td>
        </tr>
        {{/reviewList}}
    </tbody>
</table>
{{>layouts/footer}}
